<h2>Find a Ride</h2>

<div class="row">
  <div class="col-md-6">
    <h4>Riders Waiting</h4>
    <ul class="list-group">
      <% @waiting_riders.each do |ride| %>
<li class="list-group-item d-flex justify-content-between align-items-center">
          Rider at <%= ride.waiting_location.name %>
<%= button_to "Pick Up", ride_path(ride, action_type: "pick_up"), method: :patch, class: "btn btn-primary btn-sm" %>
</li>
<% end %>
</ul>
</div>

<div class="col-md-6">
        <h4>Start a Ride</h4>
        <%= form_with url: rides_path, method: :post, local: true do |form| %>
<div class="form-group">
          <%= form.label :location, "Your Location" %>
<%= form.text_field :location_name, class: "form-control" %>
</div>
<%= form.submit "Start Waiting", class: "btn btn-success mt-2" %>
<% end %>
</div>
</div>